{
  "openapi": "3.0.0",
  "info": {
    "title": "Thai Location API",
    "version": "1.0.0",
    "description": "API for Thai geographies, provinces, districts and sub-districts (tambons)."
  },
  "servers": [
    { "url": "/" }
  ],
  "paths": {
    "/api/v1/geographies": {
      "get": {
        "summary": "List geographies",
        "responses": {
          "200": {
            "description": "A list of geographies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Geography" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/provinces": {
      "get": {
        "summary": "List provinces",
        "parameters": [
          { "name": "geography_id", "in": "query", "schema": { "type": "integer" } },
          { "name": "search", "in": "query", "schema": { "type": "string" } },
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": {
          "200": {
            "description": "Paginated provinces response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PaginatedResponseProvinces" }
              }
            }
          }
        }
      }
    },
    "/api/v1/provinces/{id}": {
      "get": {
        "summary": "Get a single province",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Province details", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProvinceWithGeography" } } } },
          "404": { "description": "Not found" }
        }
      }
    },
    "/api/v1/provinces/{id}/districts": {
      "get": {
        "summary": "Districts by province",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "List of districts", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PaginatedResponseDistricts" } } } } }
      }
    },
    "/api/v1/districts": {
      "get": {
        "summary": "List districts",
        "parameters": [
          { "name": "province_id", "in": "query", "schema": { "type": "integer" } },
          { "name": "search", "in": "query", "schema": { "type": "string" } },
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": { "200": { "description": "Paginated districts", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PaginatedResponseDistricts" } } } } }
      }
    },
    "/api/v1/districts/{id}": {
      "get": {
        "summary": "Get district",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "District detail", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/DistrictWithProvince" } } } } }
      }
    },
    "/api/v1/districts/{id}/subdistricts": {
      "get": {
        "summary": "Sub-districts by district",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "List of sub-districts", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PaginatedResponseSubDistricts" } } } } }
      }
    },
    "/api/v1/subdistricts": {
      "get": {
        "summary": "List sub-districts",
        "parameters": [
          { "name": "district_id", "in": "query", "schema": { "type": "integer" } },
          { "name": "zip_code", "in": "query", "schema": { "type": "integer" } },
          { "name": "search", "in": "query", "schema": { "type": "string" } },
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": { "200": { "description": "Paginated sub-districts", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PaginatedResponseSubDistricts" } } } } }
      }
    },
    "/api/v1/subdistricts/{id}": {
      "get": {
        "summary": "Get sub-district",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Sub-district detail", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SubDistrictWithDistrict" } } } } }
      }
    }
  },
  "components": {
    "schemas": {
      "Geography": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" }
        }
      },
      "Province": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name_th": { "type": "string" },
          "name_en": { "type": "string" },
          "geography_id": { "type": "integer" }
        }
      },
      "ProvinceWithGeography": {
        "allOf": [ { "$ref": "#/components/schemas/Province" }, { "type": "object", "properties": { "geography": { "$ref": "#/components/schemas/Geography" } } } ]
      },
      "District": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name_th": { "type": "string" },
          "name_en": { "type": "string" },
          "province_id": { "type": "integer" }
        }
      },
      "DistrictWithProvince": {
        "allOf": [ { "$ref": "#/components/schemas/District" }, { "type": "object", "properties": { "province": { "$ref": "#/components/schemas/Province" } } } ]
      },
      "SubDistrict": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "zip_code": { "type": "integer" },
          "name_th": { "type": "string" },
          "name_en": { "type": "string" },
          "district_id": { "type": "integer" }
        }
      },
      "SubDistrictWithDistrict": {
        "allOf": [ { "$ref": "#/components/schemas/SubDistrict" }, { "type": "object", "properties": { "district": { "$ref": "#/components/schemas/District" }, "province": { "$ref": "#/components/schemas/Province" } } } ]
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "page": { "type": "integer" },
          "limit": { "type": "integer" },
          "total": { "type": "integer" },
          "total_pages": { "type": "integer" }
        }
      },
      "PaginatedResponseProvinces": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/Province" } },
          "pagination": { "$ref": "#/components/schemas/Pagination" }
        }
      },
      "PaginatedResponseDistricts": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/District" } },
          "pagination": { "$ref": "#/components/schemas/Pagination" }
        }
      },
      "PaginatedResponseSubDistricts": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/SubDistrict" } },
          "pagination": { "$ref": "#/components/schemas/Pagination" }
        }
      }
    }
  }
}
